# Cineo AI - Development Environment Variables
# This file is for development only - replace with your actual API keys

# ===================================
# DATABASE CONFIGURATION
# ===================================
DATABASE_URL=postgresql://user:password@localhost:5432/cineo_db

# ===================================
# JWT AUTHENTICATION
# ===================================
SECRET_KEY=dev-secret-key-change-in-production-123456789012345678901234567890
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_URL=redis://localhost:6379

# ===================================
# AI API KEYS (Development Mode - Mock Fallbacks)
# ===================================

# OpenRouter API - For script generation with Grok AI
# Leave empty to use mock scripts for development
OPENROUTER_API_KEY=

# Stability AI - For image/storyboard generation
# Leave empty to use placeholder images for development
STABILITY_API_KEY=

# ElevenLabs - For text-to-speech and audio
# Leave empty to use placeholder audio for development
ELEVENLABS_API_KEY=

# RunwayML - For video generation (Optional)
# Leave empty for development
RUNWAY_API_KEY=

# ===================================
# DEVELOPMENT SETTINGS
# ===================================
DEBUG=True
LOG_LEVEL=DEBUG

# ===================================
# FRONTEND CONFIGURATION
# ===================================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
