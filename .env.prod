# Cineo AI - Production Environment Variables Template
# Copy this file to .env and replace with your actual production values

# ===================================
# DATABASE CONFIGURATION
# ===================================
DATABASE_URL=sqlite:///./cineo.db

# ===================================
# JWT AUTHENTICATION
# ===================================
SECRET_KEY=your-production-secret-key-32-characters-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================
# PAYMENT INTEGRATION (Optional)
# ===================================
STRIPE_SECRET_KEY=sk_live_your_stripe_live_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_publishable_key

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_URL=redis://username:password@your_redis_host:6379/0

# ===================================
# STORAGE CONFIGURATION
# ===================================
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
S3_BUCKET_NAME=your-production-bucket-name

# ===================================
# AI API KEYS (Required for production)
# ===================================

# OpenRouter API - For script generation
OPENROUTER_API_KEY=sk-or-v1-your-production-openrouter-key

# Stability AI - For image generation
STABILITY_API_KEY=sk-your-production-stability-key

# ElevenLabs - For audio generation
ELEVENLABS_API_KEY=sk_your-production-elevenlabs-key

# RunwayML - For video generation
RUNWAY_API_KEY=your-production-runway-key

# ===================================
# PRODUCTION SETTINGS
# ===================================
DEBUG=False
LOG_LEVEL=WARNING

# ===================================
# FRONTEND CONFIGURATION
# ===================================
FRONTEND_URL=https://your-domain.com
ALLOWED_ORIGINS=["https://your-domain.com"]

# ===================================
# EMAIL CONFIGURATION
# ===================================
SMTP_SERVER=your-smtp-server.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# ===================================
# SECURITY SETTINGS
# ===================================
CORS_ORIGINS=["https://your-domain.com"]
RATE_LIMIT_PER_MINUTE=60
MAX_UPLOAD_SIZE=100MB
